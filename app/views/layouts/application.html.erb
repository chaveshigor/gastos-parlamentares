<!DOCTYPE html>
<html>
  <head>
    <title>DesafioBackend</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, inicial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p id='success-div' class="alert alert-success position-absolute top-0 end-0 m-3"><%= notice %>
        <button 
          onClick='document.getElementById("success-div").style.display = "none"'
          class="close"
          style="background-color:transparent"
          data-dismiss="alert"
          aria-label="close"
        >&times;</button>
      </p>
    <% end %>
    <% if alert %>
      <p id='alert-div' class="alert alert-danger position-absolute top-0 end-0 m-3"><%= alert %>
        <button
          onClick='document.getElementById("alert-div").style.display = "none"'
          class="close"
          style="background-color:transparent"
          data-dismiss="alert"
          aria-label="close"
        >&times;</button>
      </p>
    <% end %>
    <%= yield %>
  </body>
</html>
