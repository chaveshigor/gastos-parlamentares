<img src='<%= @politician.picture %>'>

<%= @politician.name %><br>
Total: <%= format_currency(@politician.total_expenses) %><br>
Maior despesa: <%= format_currency(@politician.biggest_expense.net_value) %> no dia <%=@politician.biggest_expense.generation_date.strftime('%d/%m/%Y')%><br>

<%= line_chart @politician.expenses.group_by_day(:generation_date).sum(:net_value), xtitle: 'Day', ytitle: 'Amount', download: true, height: '500px' %>
<%= bar_chart @politician.expenses.includes(:expense_type).group('expense_types.description').sum(:net_value) %>

<% @expenses.each do |expense| %>
  Liquido: <%= format_currency(expense.net_value) %> - 
  Data de emissao: <%= expense.generation_date.strftime('%d/%m/%Y') %> - 
  Fornecedor: <%= expense.provider.name.titleize %>
  <% if expense.document_url.present? %>
     - <%= link_to 'Boleto', expense.document_url, target: :_blank %>
  <% end %>
  <br>
<% end %>

